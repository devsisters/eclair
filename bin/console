#!/usr/bin/env ruby
# frozen_string_literal: true

require "eclair"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)

require "eclair/grid"
Eclair.init_config
Curses.init_screen
Curses.stdscr.timeout = 100
Curses.stdscr.keypad = true
Curses.start_color
Curses.use_default_colors
Curses.crmode
Curses.noecho
Curses.curs_set(0)
trap("INT") { exit }

grid = Eclair::Grid.new

loop do
  case k = Curses.stdscr.getch
  when Curses::KEY_RESIZE
    grid.resize
  when "h", "H", Curses::KEY_LEFT ; grid.move(Curses::KEY_LEFT)
  when "j", "J", Curses::KEY_RIGHT; grid.move(Curses::KEY_DOWN)
  when "k", "K", Curses::KEY_UP   ; grid.move(Curses::KEY_UP)
  when "l", "L", Curses::KEY_DOWN ; grid.move(Curses::KEY_RIGHT)
  when " "
    grid.space
  when 10
    grid.action
  end
end
